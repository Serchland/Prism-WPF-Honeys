<Window x:Class="Prism_WPF_Honeys.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:core="clr-namespace:PrismWPFHoneys.Core;assembly=PrismWPFHoneys.Core"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <ContentControl Grid.Row="0"
            prism:RegionManager.RegionName="{x:Static core:RegionNames.ContentRegion}" />
        
        <StackPanel Grid.Row="1"
                        prism:RegionManager.RegionName="{x:Static core:RegionNames.StackRegion}" />
    </Grid>
</Window>
