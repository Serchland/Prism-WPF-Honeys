<ribbon:RibbonTab x:Class="PrismWPFHoneys.Modules.Mail.Views.AppRibbonTab"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ribbon="clr-namespace:System.Windows.Controls.Ribbon;assembly=System.Windows.Controls.Ribbon"
                  Header="Actions">

    <ribbon:RibbonGroup>
        <ribbon:RibbonButton Label="{Binding NewMailCaption}"
                             LargeImageSource ="new-message.png"
                             Command="{Binding MailDetailCommand}"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Center">
        </ribbon:RibbonButton>
    </ribbon:RibbonGroup>
</ribbon:RibbonTab>
